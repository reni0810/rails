.container
  %h1.display-3 Timing
  .row
    .col-lg-4.mb-4
      .card.h-100
        %h4.card-header= @timing.restaurant.name
        .card-body
          %p.card-text
            .row.container
              .col-lg-6.mb-6
                %strong.text-success= @timing.day
              .col
                = @timing.start_time.strftime("%H:%M %p")
                to
                = @timing.end_time.strftime("%H:%M %p")
        .card-footer
          = link_to 'Edit', edit_timing_path(@timing)
          |
          = link_to 'Back',  timings_path
