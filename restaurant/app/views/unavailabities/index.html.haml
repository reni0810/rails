%h1 Unavailabities
%table
  %thead
    %tr
      %th Date
      %th Start time
      %th End time
      %th Full day
      %th{:colspan => "3"}
  %tbody
    - @unavailabities.each do |unavailabity|
      %tr
        %td= unavailabity.date
        %td= unavailabity.start_time
        %td= unavailabity.end_time
        %td= unavailabity.full_day
        %td= link_to 'Show', unavailabity
        %td= link_to 'Edit', edit_unavailabity_path(unavailabity)
        %td= link_to 'Destroy', unavailabity, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Unavailabity', new_unavailabity_path
