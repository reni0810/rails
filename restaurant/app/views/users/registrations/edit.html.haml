.container
  .row
    .col-sm-11.col-md-9.col-lg-7.mx-auto
      .card.card-signin.my-5
        .card-header
          %h5.card-title.text-center Edit profile
        .card-body
          = form_for(resource, as: resource_name, url: registration_path(resource_name), method: :patch) do |f|
            .field
              = f.label :name
              %br/
              = f.text_field :name, autofocus: true, autocomplete: "name",:class =>"form-control"
            .field
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email",:class =>"form-control"
            .field
              = f.label :mobile_no
              %br/
              = f.text_field :mobile_no, autofocus: true, autocomplete: "mobile_no",:class =>"form-control"
            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              %div
                Currently waiting confirmation for: #{resource.unconfirmed_email}
            .field
              = f.label :password
              %i (leave blank if you don't want to change it)
              %br/
              = f.password_field :password, autocomplete: "off", class: 'form-control'
              - if @minimum_password_length
                %em
                  = @minimum_password_length
                  characters minimum
            .field
              = f.label :password_confirmation
              = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
            .field
              = f.label :current_password
              %i (we need your current password to confirm your changes)
              = f.password_field :current_password, autocomplete: "off", class: "form-control"
            .actions
              = f.button "Update" ,class: "btn btn-lg btn-primary btn-block"
          %h3 Cancel my account
          %p
            Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-lg btn-primary btn-block"}
        .card-footer
          = render "users/shared/links"
