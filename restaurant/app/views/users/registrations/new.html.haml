.container
  .row
    .col-sm-9.col-md-7.col-lg-5.mx-auto
      .card.card-signin.my-5
        .card-header
          %h5.card-title.text-center Sign up
        .card-body
          = form_for(@user, as: resource_name, url: registration_path(resource_name)) do |f|
            .field
              = f.label :name
              %br/
              = f.text_field :name, autofocus: true, autocomplete: "name",:class =>"form-control"
            .field
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email",:class =>"form-control"
            .field
              = f.label :mobile_no
              %br/
              = f.text_field :mobile_no, autofocus: true, autocomplete: "mobile_no",:class =>"form-control"
            .field
              = f.label :password
              %br/
              = f.password_field :password, autocomplete: "off", class: 'form-control'
              - if @validatable
                %span.help-block
                  = @minimum_password_length
                  characters minimum
            .field
              = f.label :password_confirmation
              = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
            .actions
              = f.button "sign up" ,:class => "btn btn-lg btn-primary btn-block"
        .card-footer
          = render "users/shared/links"
